<resources>
    <style name="Widget.Theme.StuffTrek.MyView" parent="Theme.MaterialComponents.Light">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

        <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.StuffTrek.TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/stufftrek_primary</item>
        <item name="colorPrimaryDark">@color/stufftrek_dark</item>
        <item name="colorAccent">@color/stufftrek_btn_tint</item>
        <item name="colorButtonNormal">@color/stufftrek_btn_color</item>
        <item name="colorControlNormal">@color/color_text_primary</item>
        <item name="colorControlActivated">@color/color_text_primary</item>
        <item name="colorControlHighlight">@color/color_text_primary</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorSecondary">@color/color_text_primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@color/color_text_primary</item>
    </style>

    <style name="FirebaseUI.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="FirebaseUI.Text.Link">
        <item name="android:textColor">@color/color_text_primary</item>
    </style>
</resources>
